<Window x:Class="SokobanGame.MenuGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SokobanGame"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Sokoban Game" Height="600" Width="900">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/bg-warehouse.jpg"/>
        </Grid.Background>
        <Label Content="Sokoban Game" HorizontalAlignment="Center" Margin="0,56,0,0" VerticalAlignment="Top" Height="105" Width="700" FontSize="72" FontWeight="Bold" FontFamily="Bauhaus 93" Foreground="#FFF7F7F7" FontStyle="Normal"/>
        <Button x:Name="Btn_exitGame" Content="Exit" HorizontalAlignment="Left" Margin="100,433,0,0" VerticalAlignment="Top" Height="49" Width="200" FontFamily="Bauhaus 93" FontWeight="Normal" FontSize="24" BorderBrush="Black" Foreground="White" Background="DarkSlateGray" Click="Btn_exitGame_Click"/>
        <Button x:Name="Btn_startGame" Content="Start Game" HorizontalAlignment="Left" Margin="100,379,0,0" VerticalAlignment="Top" Height="49" Width="200" FontFamily="Bauhaus 93" FontWeight="Normal" FontSize="24" BorderBrush="Black" Foreground="White" Click="Btn_startGame_Click" Background="DarkSlateGray"/>


    </Grid>


</Window>
